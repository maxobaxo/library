<html>
    <head>
        <link href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' rel='stylesheet' type='text/css'>
        <title>Cal's Library</title>
    </head>
    <body>
        <div class="container">
            <div class="jumbotron">
                <h1>Cal's Library</h1>
            </div>

            <h3>Search for another book by...</h3>
            <form  action="/search_results">
                <input placeholder="Title" type="text" name="title" required>
                <button type="submit" class="btn">Search</button>
            </form>

            <form  action="/search_results">
                <input placeholder="Author" type="text" name="title" required>
                <button type="submit" class="btn">Search</button>
            </form>

            {% if books is not empty %}
                <h3>Search Results:</h3>
                <ul>
                    {% for book in books %}
                        <li><h4>{{ book.getTitle }}</h4></li><br>
                    {% endfor %}
                </ul>
            {% else %}
                <h3>Sorry, your search returned no results.</h3>
            {% endif %}
            <a href="/">Home</a>
        </div>
    </body>
</html>
