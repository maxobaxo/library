<html>
    <head>
        <link href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' rel='stylesheet' type='text/css'>
        <title>Cal's Library</title>
    </head>
    <body>
        <div class="container">
            <div class="jumbotron">
                <h1>Cal's Library</h1>
            </div>

            <h2>Update {{ book.getTitle }}</h2>
            {% if authors is not empty %}
                <p>Here are the authors for this book:</p>
                <ul>
                    {% for author in authors %}
                        <form action="/authors/{{ author.getId }}/delete" method="post">
                            <li>{{ author.getFullName }}</br>
                            <input type="hidden" name="_method" value="delete">
                            <input type="hidden" name="book_id" value="{{ book.getId }}">
                            <button type="submit" class="btn">Fuck This Author In Particular</button></li>
                        </form>
                        </br>
                    {% endfor %}
                </ul>
            {% endif %}

            <form action="/books/{{ book.getId }}" method="post">
                <input name="_method" type="hidden" value="patch">
                <input name="book_id" type="hidden" value="{{ book.getId }}">

                <input placeholder="Enter New Title" type="text" name="new_title" required>
                <button type="submit" class="btn btn-success">Edit This Book</button>
            </form>

            <a href="/">Home</a>
        </div>
    </body>
</html>
