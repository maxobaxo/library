<html>
    <head>
        <link href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' rel='stylesheet' type='text/css'>
        <title>Cal's Library</title>
    </head>
    <body>
        <div class="container">
            <div class="jumbotron">
                <h1>Cal's Library</h1>
            </div>

            <h2>Update {{ author.getFullName }}</h2>

            <form action="/authors/{{ author.getId }}" method="post">
                <input name="_method" type="hidden" value="patch">
                <input name="author_id" type="hidden" value="{{ author.getId }}">

                <input placeholder="Enter New First Name" type="text" name="new_first_name" required>
                <input placeholder="Enter New Last Name" type="text" name="new_last_name" required>
                <button type="submit" class="btn btn-success">Edit This Author</button>
            </form>

            <a href="/">Home</a>
        </div>
    </body>
</html>
